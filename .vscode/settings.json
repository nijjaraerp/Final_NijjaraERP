{
  "editor.experimental.treeSitterTelemetry": true,
  "telemetry.editStats.details.enabled": true,
  "telemetry.editStats.showDecorations": true,
  "telemetry.editStats.showStatusBar": true,
  // Configure MCP servers used by your IDE extensions
  "anthropic.mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem"],
      "env": {
        "ROOT": "${workspaceFolder}"
      }
    },
    "shell": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-shell"]
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git"]
    },
    "puppeteer": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"]
    }
  }
}
